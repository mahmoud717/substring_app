<div class="d-flex justify-content-center px-5 py-5 my-5">
    <%= form_with html: {class: 'w-md-50 form d-flex flex-column'} do |form| %>

    <div class="form-group mb-4">
        <label for="inputEmail" class="font-weight-bold mb-1 ">Email</label>
        <%= form.email_field :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', class: 'form-control', id: 'inputEmail', placeholder: "Email" %>
    </div>

    <%= form.submit "Login", class: 'btn btn-primary btn-lg w-md-25 align-self-center'%>

    <% end %>
</div>